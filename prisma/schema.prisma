
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@localhost:5432/prisma"
}
model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  name     String
}

model Todo {
  id          Int     @id @default(autoincrement())
  userId      Int
  title       String
  description String?
  done        Boolean @default(false)
}